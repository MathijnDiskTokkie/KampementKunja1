@model Wagenpark.Models.BoekingenModel

@{
    ViewBag.Title = "Index";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>

<style>
    body {
        background-image: url('../../Content/Images/Background.png');
        background-size: cover;
    }

    .btn-danger {
    }
</style>

<body>




    <h2 style="color: white">Gastenlijst:</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="background-color: #fff">
        <tr style="background-color: #4b631f">
            <th>
                @Html.DisplayNameFor(model => model.listboekingen.FirstOrDefault().boekingen.gastID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listboekingen.FirstOrDefault().boekingen.Boekingid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listboekingen.FirstOrDefault().boekingen.incheckdatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listboekingen.FirstOrDefault().boekingen.uitcheckdatum)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.listboekingen)
        {
            <tr>
                <td>
                    <a href="">
                        <div data-toggle="modal" data-target="#myModal">
                            @Html.ActionLink("" + item.boekingen.gastID, "Index", new { showpopup = true, gastid = item.boekingen.gastID })

                        </div>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.Boekingid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.incheckdatum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.boekingen.uitcheckdatum)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.boekingen.Boekingid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.boekingen.Boekingid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.boekingen.Boekingid })
                </td>
            </tr>
        }

    </table>

    @if (Model.popuplatenzien)
    {
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Gast gegevens:</h4>
                    </div>
              
                        <div class="modal-body">

                            <div class="row" style="margin-left: 20px; margin-right: 40px; width: 100%">

                                <div class="col-sm-4" style="border: 1px solid #878787; background-color: #e8e8e8; height: 100%;">
                                    <h5><b>Emailadres: </b></h5>
                                    <h5><b>Naam: </b></h5>
                                    <h5><b>Achternaam: </b></h5>
                                    <h5><b>Adres: </b></h5>
                                    <h5><b>Tel. nummer: </b></h5>
                                </div>
                                <div class="col-sm-7" style="border-top: 1px solid #878787; border-bottom:1px solid #878787; border-right: 1px solid #878787; height: 100% ">

                                    <h5>@Model.listboekingen.Where(a => a.gasten.GastenID == Model.gastid).FirstOrDefault().gasten.Email</h5>
                                    <h5>@Model.listboekingen.Where(a => a.gasten.GastenID == Model.gastid).FirstOrDefault().gasten.Voornaam</h5>
                                    <h5>@Model.listboekingen.Where(a => a.gasten.GastenID == Model.gastid).FirstOrDefault().gasten.Achternaam</h5>
                                    <h5>@Model.listboekingen.Where(a => a.gasten.GastenID == Model.gastid).FirstOrDefault().gasten.Adres</h5>
                                    <h5>@Model.listboekingen.Where(a => a.gasten.GastenID == Model.gastid).FirstOrDefault().gasten.telNr</h5>

                                </div>

                            </div>


                        </div>
                   
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(window).on('load',function(){
                $('#myModal').modal('show');
            });
        </script>
    }

</body>


